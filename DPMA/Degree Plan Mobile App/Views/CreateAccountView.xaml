<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Degree_Plan_Mobile_App.Views.CreateAccountView"
             Title="CreateAccountView">
    <VerticalStackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
        </Grid>
        <Label Text="Username" FontAttributes="Bold" FontSize="16" HorizontalOptions="Center" Grid.Column="0" Grid.Row="0" Margin="0, 25, 0, 0"/>
        <Entry x:Name="newusername" Placeholder="Enter your username" Grid.Column="1" Grid.Row="0" Margin="0, -5, 0, 25"/>
        <Label Text="Password" FontAttributes="Bold" FontSize="16" HorizontalOptions="Center" Grid.Column="0" Grid.Row="1" />
        <Entry x:Name="newpassword" IsPassword="True" Placeholder="Enter your password" Grid.Column="1" Grid.Row="1" Margin="0, -5, 0, 25"/>
        <Label Text="Full Name" FontAttributes="Bold" FontSize="16" HorizontalOptions="Center" Grid.Column="0" Grid.Row="2" />
        <Entry x:Name="newname" Placeholder="Enter your Full name" Grid.Column="1" Grid.Row="2" Margin="0, -5, 0, 50"/>
        <Button Text="Create Account" Grid.ColumnSpan="2" Grid.Row="3" Clicked="OnClick_CreateAccount" Margin="0, 50, 0, 0"/>
    </VerticalStackLayout>
</ContentPage>