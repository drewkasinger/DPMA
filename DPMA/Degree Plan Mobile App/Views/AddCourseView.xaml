<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971.Views.AddCourseView"
             Title="AddCourseView">
    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Start" Spacing="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width=".5*"/>
            </Grid.ColumnDefinitions>

            <Entry Placeholder="Enter Course name here"
               x:Name="newcoursename"
               Grid.Row="0"
               Grid.ColumnSpan="2"/>

            <Label Text="Term Start"
               Grid.Row="1"
               Grid.Column="0"
               VerticalOptions="Center"
               HorizontalOptions="Center"/>

            <DatePicker x:Name="newcoursestart"
                    Grid.Row="1"
                    Grid.Column="1"
                    VerticalOptions="Center"/>

            <Label Text="Term End"
               Grid.Row="2"
               Grid.Column="0"
               VerticalOptions="Center"
               HorizontalOptions="Center"/>

            <DatePicker x:Name="newcourseend"
                    Grid.Row="2"
                    Grid.Column="1"
                    VerticalOptions="Center"/>
        </Grid>
        <CollectionView>
            <CollectionView.Footer>
                <Button Text="Add Course" Clicked="OnClick_AddCourse"/>
            </CollectionView.Footer>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>