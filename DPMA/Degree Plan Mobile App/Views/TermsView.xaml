<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971.Views.TermsView"
             Title="TermsView">
    <NavigationPage.TitleView>
        <Label
            FontSize="24"
            Text="Terms"
            TextColor="Black" />
    </NavigationPage.TitleView>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Text="Search for any courses starting between these dates." HorizontalOptions="Center" FontAttributes="Bold" Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="0" />
            <Label Text="Start Date" Grid.Column="0" Grid.Row="1" Margin="0, 10, 0, -7" />
            <DatePicker x:Name="start" Grid.Column="0" Grid.Row="2" />
            <Label Text="End Date" Grid.Column="1" Grid.Row="1" Margin="0, 10, 0, -7"/>
            <DatePicker x:Name="end" Grid.Column="1" Grid.Row="2" />
            <Button Text="Run Report" Grid.Column="3" Grid.Row="2" Clicked="OnClick_RunReport" />
        </Grid>
        <ScrollView Grid.Row="1" HeightRequest="550" VerticalScrollBarVisibility="Always">
            <VerticalStackLayout>
                <CollectionView x:Name="terms" ItemsLayout="VerticalList" SelectionMode="Single" EmptyView="No Terms have been added." SelectionChanged="OpenCourses_SelectionChanged">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Stroke="Black"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 10"
                        Margin="10"
                        Padding="5">
                                <VerticalStackLayout>
                                    <Label Text="{Binding termName}" 
                               HorizontalOptions="Center"
                               FontAttributes="Bold"
                               TextDecorations="Underline"
                               Padding="5"
                               FontSize="20"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <VerticalStackLayout Grid.Column="0"
                                                 Grid.Row="0"
                                                 HorizontalOptions="Center">
                                            <Label Text="Term Start"
                                       FontAttributes="Bold"
                                       TextDecorations="Underline"
                                       Padding="5"/>
                                            <Label Text="{Binding termStart}"
                                       Padding="0,5,0,5"/>
                                        </VerticalStackLayout>
                                        <VerticalStackLayout Grid.Column="1"
                                                 Grid.Row="0"
                                                 HorizontalOptions="Center">
                                            <Label Text="Term End"
                                       FontAttributes="Bold"
                                       TextDecorations="Underline"
                                       Padding="5"/>
                                            <Label Text="{Binding termEnd}"
                                       Padding="0,5,0,5"/>
                                        </VerticalStackLayout>
                                    </Grid>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
        <CollectionView Grid.Row="2">
            <CollectionView.Footer>
                <VerticalStackLayout HorizontalOptions="Center" Spacing="10">
                    <Button Text="Add Term" Clicked="OnClick_AddTerm" />
                    <Label Text="Click on a term to edit it" HorizontalOptions="Center" Padding="5"/>
                </VerticalStackLayout>
            </CollectionView.Footer>
        </CollectionView>
    </Grid>
</ContentPage>